{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "lib": ["ES2020", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": ["jest", "@cloudflare/workers-types"]
